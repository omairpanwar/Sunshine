<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weatherapp.IntentActivity">

    <TextView
        android:id="@+id/daytextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="37dp"
        android:text="Today"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/datetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/daytextview"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:text="20,April"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/maxtemp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sunny" />

    <TextView
        android:id="@+id/pressuretextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/daytextview"
        android:layout_marginBottom="177dp"
        android:text="Pressure:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/humiditytextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/daytextview"
        android:layout_marginBottom="216dp"
        android:text="Humidity:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/maxtemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/daytextview"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:text="25"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/mintemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/daytextview"
        android:layout_alignTop="@+id/skyclear"
        android:text="15"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/windtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/daytextview"
        android:layout_marginBottom="136dp"
        android:text="Wind:"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/locationtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/daytextview"
        android:layout_marginBottom="95dp"
        android:text="Location:"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pressure"
        android:layout_alignTop="@+id/humiditytextview"
        android:text="72%"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/location"
        android:layout_alignTop="@+id/pressuretextview"
        android:text="72%"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/windtextview"
        android:layout_toEndOf="@+id/daytextview"
        android:text="72%"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/locationtextview"
        android:layout_marginStart="109dp"
        android:text="72%"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/skyclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageview"
        android:layout_marginTop="217dp"
        android:text="clear sky"
        android:textSize="25dp" />

</RelativeLayout>